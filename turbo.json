{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**", "public/robots.txt", "public/sitemap.xml"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "ZORA_MARKETPLACE_URL",
    "PRIVATE_ZORA_API_THREE",
    "PRIVATE_ALCHEMY_ID",
    "OPENSEA_API_KEY",
    "SEGMENT_ID",
    "ZORA_API_BASE_URL",
    "PRIVATE_REDIS_CONNECTION_URI",
    "ZORA_HASH_API_BASE_URL",
    "NPM_TOKEN",
    "ZORA_SEARCH_API_BASE_URL",
    "STAGE",
    "ETH_RPC_URL",
    "ETHERSCAN_API_KEY",
    "NEXT_PUBLIC_PLAYWRIGHT_ENABLED",
    "NEXT_PUBLIC_CHAIN_ID",
    "NEXT_PUBLIC_CHAIN_ENV",
    "NEXT_PUBLIC_UPLOAD_API",
    "NEXT_PUBLIC_IPFS_UPLOAD_API",
    "NEXT_PUBLIC_URL",
    "NEXT_PUBLIC_ALCHEMY_ID",
    "NEXT_PUBLIC_MAINTENANCE_MODE",
    "NEXT_PUBLIC_NETWORK",
    "NEXT_PUBLIC_IPFS_GATEWAY",
    "NEXT_PUBLIC_SENTRY_DSN",
    "NEXT_PUBLIC_ZORA_API_KEY",
    "NEXT_PUBLIC_IMGIX_URL",
    "IMGIX_DOMAIN",
    "IMGIX_TOKEN",
    "SENTRY_DSN",
    "SENTRY_ORG",
    "SENTRY_PROJECT",
    "VERCEL_ENV",
    "TENDERLY_USER",
    "TENDERLY_PROJECT",
    "TENDERLY_ACCESS_KEY",
    "VERCEL_EDGE_CONFIG",
    "NODE_ENV",
    "NEXT_PUBLIC_ZORA_API_ROOT_URL",
    "NEXT_PUBLIC_VERCEL_URL"
  ]

}
